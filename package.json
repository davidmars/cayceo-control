{
  "name": "cayceo-control",
  "version": "0.5.7",
  "description": "L'interface de contr√¥le d'Ipneo",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "update": "npm update",
    "build": "electron-builder",
    "publish": "electron-builder -p always"
  },
  "repository": "https://github.com/davidmars/cayceo-control",
  "keywords": [
    "jukeboxvr",
    "cayceo",
    "virtual reality",
    "vr"
  ],
  "author": "davidmars",
  "license": "CC0-1.0",
  "devDependencies": {
    "electron": "^6.1.12",
    "electron-builder": "^21.2.0"
  },
  "dependencies": {
    "cayceo-ui": "file:../cayceo-ui",
    "check-disk-space": "^2.1.0",
    "electron-pdf-window": "^1.0.12",
    "electron-updater": "^4.3.1",
    "event-emitter-es6": "^1.1.5",
    "express": "^4.17.1",
    "glob": "^7.1.6",
    "node-localstorage": "^2.1.6",
    "rimraf": "^3.0.2",
    "slash": "^3.0.0",
    "socket.io": "^2.2.0",
    "universal-analytics": "^0.4.20",
    "uuid": "^3.4.0"
  },
  "build": {
    "appId": "com.github.davidmars.cayceo-control",
    "win": {
      "publish": [
        "github"
      ],
      "asar": true,
      "extraFiles": [
        "platform-tools_r28.0.0-windows/**",
        "docs/**",
        "jukebox/**/*.html",
        "jukebox/**/*.svg",
        "jukebox/**/*.png",
        "jukebox/**/*.jpg"
      ],
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ]
    },
    "nsis": {
      "createDesktopShortcut": "always",
      "createStartMenuShortcut": true
    }
  }
}
